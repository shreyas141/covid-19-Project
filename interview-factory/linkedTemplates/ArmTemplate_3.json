					},
					"parameters": {}
				},
				"type": "TumblingWindowTrigger",
				"typeProperties": {
					"frequency": "Hour",
					"interval": 24,
					"startTime": "2024-04-20T17:00:00Z",
					"delay": "00:00:00",
					"maxConcurrency": 50,
